<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme3"
    android:layout_height="match_parent"
    tools:context="hwool.com.au.hermitageintelligenceagency.activities.HomeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="@dimen/card_saize_height_standard"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_top_standard"
        app:cardCornerRadius="@dimen/card_corner_standard"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/secondaryColor"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="Redeem Gift Card"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/qr_code_icon"
            android:maxHeight="9dp"
            android:src="@drawable/qr_code" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/card_size_width_small"
        android:layout_height="@dimen/card_saize_height_standard"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_top_standard"
        app:cardCornerRadius="@dimen/card_corner_standard"
app:cardBackgroundColor="@color/secondaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="@dimen/card_saize_height_standard"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginStart="@dimen/margin_standard"
        app:cardBackgroundColor="@color/secondaryColor"
        app:cardCornerRadius="@dimen/card_corner_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
