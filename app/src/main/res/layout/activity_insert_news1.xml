<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="hwool.com.au.hermitageintelligenceagency.activities.InsertNews">


    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/news_title"
        android:inputType="textPersonName"
        android:textColor="@color/secondaryColor"
        android:textColorHint="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAuthor"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_standard"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/author"
        android:inputType="textPersonName"
        android:textColor="@color/secondaryColor"
        android:textColorHint="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBody" />

    <EditText
        android:id="@+id/etBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/margin_standard"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/news_body"
        android:inputType="textMultiLine|textLongMessage"
        android:textColor="@color/secondaryColor"
        android:textColorHint="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <EditText
        android:id="@+id/etDateCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/date_created"
        android:inputType="date"
        android:textColorHint="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAuthor" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="106dp"

        android:layout_marginEnd="133dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="156dp"
        android:background="@color/primaryDarkColor"
        android:text="@string/save_news"

        android:textColor="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDateCreated" />


</android.support.constraint.ConstraintLayout>
